<div class="form-group">
    <label for="system_id">
        {{ __('System') }}
    </label>
    <select id="system_id" name="system_id" class="custom-select" required autofocus>
        <option disabled {{ not indicator ? 'selected' }}>
            {{ __('Select an option') }}
        </option>
        {% for k, v in systems %}
            <option value="{{ k }}" {{ indicator.system_id == k ? 'selected' }}>
                {{ v }}
            </option>
        {% endfor %}
    </select>
</div>

<div class="form-group">
    <label for="process_id">
        {{ __('Process') }}
    </label>
    <select id="process_id" name="process_id" class="custom-select" required autofocus>
        <option disabled {{ not indicator ? 'selected' }}>
            {{ __('Select an option') }}
        </option>
        {% for k, v in processes %}
            <option value="{{ k }}" {{ indicator.process_id == k ? 'selected' }}>
                {{ v }}
            </option>
        {% endfor %}
    </select>
</div>

<div class="form-group">
    <label for="name">
        {{ __('Name') }}
    </label>
    <input type="text" id="name" name="name" value="{{ indicator.name }}" class="form-control" required>
</div>

<div class="form-group">
    <label for="responsible_id">
        {{ __('Responsible') }}
