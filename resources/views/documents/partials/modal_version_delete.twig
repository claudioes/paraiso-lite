<div class="modal fade" tabindex="-1" id="delete-version-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    {{ __('Discard Document Version') }}
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <p>{{ __('Are you sure you want to discard this document version?') }}</p>
                <small class="text-muted">
                    {{ __('This action cannot be undone.') }}
                </small>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    {{ __('Cancel') }}
                </button>

                <form class="form" action="{{ path_for('documents_versions.destroy', {document: version.document_id, version: version.id}) }}" method="post">
                    {{ csrf_field() }}
    
                    <input type="hidden" name="_METHOD" value="DELETE">

                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        {{ __('Discard') }}
                    </button>
                </form>
            </div>
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal -->
