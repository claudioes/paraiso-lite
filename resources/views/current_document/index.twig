{% extends 'layouts/app_title.twig' %}

{% block css %}
    <style>
        .pdf-viewer {
            border: none !important;
        }
    </style>
{% endblock %}

{% block scripts %}
    <script src="{{ base_url() }}/vendor/pdfjs/pdf.worker.{{ constant('APP_VERSION') }}.min.js"></script>
    <script src="{{ base_url() }}/vendor/pdfjs/pdf.{{ constant('APP_VERSION') }}.min.js"></script>
{% endblock %}

{% block js %}
    <script type="text/javascript">
        $(function () {
            $('#btn-clear').click(function (e) {
                var form = document.getElementById('filter-form');

                $('input', form).val('');
                $('checkbox', form).removeAttr('checked');
                $('select', form).each(function () {
                    this.selectedIndex = 0;
                });

                form.submit();
            });

            $('#preview-modal').on('show.bs.modal', function (e) {
                var button = e.relatedTarget;

                $('#preview-title').html(button.dataset.title);

                App.Preview.init('#preview', button.dataset.url, App.settings.lang);
            });

            $('#preview-modal').on('hide.bs.modal', function (e) {
                $('#preview').html('');
            });

            $('.btn-print').click(function (e) {
                
            });
        });
    </script>
{% endblock %}

{% block title %}
    {{ __('Current documents') }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-body">
                    {% include 'current_document/partials/filter.twig' %}
                </div>
            </div>
        </div>

        <div class="col-md-9">
            {% if documents is empty %}
                <div class="card mb-3">
                    <div class="card-body text-center">
                        {{ __('No data found') }}
                    </div>
                </div>
            {% else %}
                {% include 'current_document/partials/table.twig' %}
            {% endif %}

            {% include 'layouts/helpers/links.twig' with {paginator: documents} %}
        </div>
    </div>

    <div class="modal fade" tabindex="-1" id="preview-modal">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="preview-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body p-0">
                    <div id="preview"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
