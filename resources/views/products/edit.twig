{% extends 'layouts/app.twig' %}

{% block js %}
    <script>
        $(function() {
            $('#form').ajaxForm();
        });
    </script>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ __('Modifying Product/Service') }}
        </div>
        <div class="card-body">
            <form id="form" action="{{ path_for('products.update', {product: product.id}) }}" method="post" autocomplete="off">
                {{ csrf_field() }}
                
                <input type="hidden" name="_METHOD" value="PUT">

                {% include 'products/partials/form.twig' %}
            </form>
        </div>
    </div>
{% endblock %}
