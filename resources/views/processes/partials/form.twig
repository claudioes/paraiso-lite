<div class="form-group">
    <label for="name">
        {{ __('Name') }}
    </label>
    <input type="text" id="name" name="name" value="{{ process.name }}" class="form-control" required autofocus>
</div>

{% if process %}
    <div class="form-group">
        <div class="custom-control custom-switch">
            <input type="checkbox" id="is_active" name="is_active" class="custom-control-input" {{ process.is_active ? 'checked' }}>
            <label class="custom-control-label" for="is_active">{{ __('Active') }}</label>
        </div>
    </div>
{% endif %}

<button type="submit" class="btn btn-success">
    <i class="fa fa-check"></i>
    {{ process.id ? __('Update') : __('Save') }}
</button>

{% if process.id %}
    <a href="{{ path_for('processes.show', {process: process.id}) }}" class="btn btn-link">
        {{ __('Cancel') }}
    </a>
{% else %}
    <a href="{{ path_for('processes.index') }}" class="btn btn-link">
        {{ __('Cancel') }}
    </a>
{% endif %}